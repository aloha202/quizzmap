<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link type="text/css" rel="stylesheet" href="{{ asset('css/normalize.css') }}">
            <link type="text/css" rel="stylesheet" href="{{ asset('css/map.css') }}">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}

            <script type="text/javascript" src="{{ asset('bundles/jquery.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/map.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <div class="user-pannel">

            Hello, <strong>{{ User().realName }}</strong>
            |
            Points: <strong>{{ User().points }}</strong>
            |
            Level: <strong>{{ User().level|default('N/A') }}</strong>
            |
            <a href="#">Login</a>
            |
            <a href="#">Register</a>
        </div>

        {% block body %}{% endblock %}
    </body>
</html>
